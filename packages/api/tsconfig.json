{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "downlevelIteration": true,
    "types": ["jest"]
  },
  "include": ["src/", "**/*.ts", "types.ts", "**/*.spec.ts", "**/*.test.ts"]
}
